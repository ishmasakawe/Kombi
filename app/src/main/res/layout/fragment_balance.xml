<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_cb_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground">

        <TextView
            android:id="@+id/carbon_balance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="24dp"
            android:text="Carbon balance: "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/iv_donateTree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iv_donateTree"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_corner_view"
            app:layout_constraintBottom_toBottomOf="@+id/iv_btnBackground1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iv_welcome"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/donate_tree_background"
            app:layout_constraintBottom_toTopOf="@+id/iv_btnBackground2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_btnBackground1" />

        <ImageView
            android:id="@+id/iv_btnBackground1"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:background="#4E0069"
            app:layout_constraintBottom_toTopOf="@+id/iv_welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_donateTree" />

        <ImageView
            android:id="@+id/iv_btnBackground2"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:background="#0E3600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_welcome" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tree Rank"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_donateTree"
            app:layout_constraintEnd_toEndOf="@+id/iv_donateTree"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toStartOf="@+id/iv_donateTree"
            app:layout_constraintTop_toTopOf="@+id/iv_donateTree"
            app:layout_constraintVertical_bias="0.141" />

        <TextView
            android:id="@+id/txt_treeBio"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_marginStart="8dp"
            android:text="Plant  50 trees to reach the next rank"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_donateTree"
            app:layout_constraintEnd_toEndOf="@+id/iv_donateTree"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_donateTree"
            app:layout_constraintTop_toTopOf="@+id/iv_donateTree"
            app:layout_constraintVertical_bias="0.853" />

        <TextView
            android:id="@+id/txt_donateTreeTitle"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:text="TREES FOR THE FUTURE"
            android:textAllCaps="false"
            android:textColor="#95DAC6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_welcome"
            app:layout_constraintEnd_toEndOf="@+id/iv_welcome"
            app:layout_constraintHorizontal_bias="0.004"
            app:layout_constraintStart_toStartOf="@+id/iv_welcome"
            app:layout_constraintTop_toTopOf="@+id/iv_welcome"
            app:layout_constraintVertical_bias="0.56" />

        <TextView
            android:id="@+id/txt_donateBio"
            android:layout_width="176dp"
            android:layout_height="84dp"
            android:layout_marginBottom="8dp"
            android:text="@string/treeForFutureBio"
            android:textColor="#95DAC6"
            app:layout_constraintBottom_toBottomOf="@+id/iv_welcome"
            app:layout_constraintEnd_toEndOf="@+id/iv_welcome"
            app:layout_constraintHorizontal_bias="0.919"
            app:layout_constraintStart_toStartOf="@+id/iv_welcome"
            app:layout_constraintTop_toTopOf="@+id/iv_welcome"
            app:layout_constraintVertical_bias="0.375" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="#CAD8CF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_btnBackground2" />

        <Button
            android:id="@+id/btn_plantTree"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#D48080"
            android:text="@string/plantTree"
            app:layout_constraintBottom_toBottomOf="@+id/iv_btnBackground1"
            app:layout_constraintEnd_toEndOf="@+id/iv_btnBackground1"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/iv_btnBackground1"
            app:layout_constraintTop_toBottomOf="@+id/iv_donateTree"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn_donate"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#80D4BB"
            android:text="@string/plantTree"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_btnBackground2"
            app:layout_constraintEnd_toEndOf="@+id/iv_btnBackground2"
            app:layout_constraintStart_toStartOf="@+id/iv_btnBackground2"
            app:layout_constraintTop_toBottomOf="@+id/iv_welcome"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/iv_rankicon"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:background="@drawable/rankbutton"
            app:layout_constraintBottom_toBottomOf="@+id/txt_treeBio"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/iv_donateTree"
            app:layout_constraintTop_toTopOf="@+id/iv_donateTree"
            app:layout_constraintVertical_bias="0.157" />

        <ImageView
            android:layout_width="296dp"
            android:layout_height="12dp"
            android:background="@drawable/loadingbar"
            app:layout_constraintBottom_toTopOf="@+id/btn_plantTree"
            app:layout_constraintEnd_toEndOf="@+id/iv_btnBackground1"
            app:layout_constraintStart_toStartOf="@+id/iv_btnBackground1"
            app:layout_constraintTop_toBottomOf="@+id/iv_donateTree"
            app:layout_constraintVertical_bias="0.45" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="296dp"
            android:layout_height="12dp"
            android:background="@drawable/loadingbar"
            app:layout_constraintBottom_toTopOf="@+id/btn_donate"
            app:layout_constraintEnd_toEndOf="@+id/iv_btnBackground2"
            app:layout_constraintStart_toStartOf="@+id/iv_btnBackground2"
            app:layout_constraintTop_toBottomOf="@+id/iv_welcome" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>